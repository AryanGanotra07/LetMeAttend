<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:id="@+id/frame_layout">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">


        <com.google.android.material.tabs.TabLayout android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/tab_layout"
                                                    app:tabMode="scrollable"
                                                    android:clipToPadding="false"
                                                    app:tabBackground="@drawable/tab_background"
                                                    android:layout_margin="5dp"
                                                    app:tabTextColor="@color/textColorPrimary"
                                                    app:tabGravity="fill"
                                                    app:tabPaddingStart="20dp"
                                                    app:tabPaddingEnd="20dp"
                                                    android:layout_gravity="fill"
                                                    app:tabTextAppearance="@style/TabItem"
                                                    app:tabIndicatorHeight="0dp"
                                                    app:tabSelectedTextColor="@color/colorAccent"
        >



        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/view_pager">


        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>

