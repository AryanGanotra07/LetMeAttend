<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="id"
                type="Integer" />
        <variable
                name="vm"
                type="com.attendance.letmeattend.viewmodels.EnterDetailsViewModel" />

    </data>

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recycler_View"
                app:setupAdapter="@{vm.getTueLectureRecyclerAdapter()}"
                app:adapter="@{vm.getTueLectureRecyclerAdapter()}"
                app:lectures="@{vm.getLectures()}"
                app:id="@{id}"
                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_btn"
                android:onClick="onClick"
                android:background="@drawable/background_floating_btn"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_margin="10dp" />


    </RelativeLayout>
</layout>