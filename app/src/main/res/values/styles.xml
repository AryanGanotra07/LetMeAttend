<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/quantum_black_100</item>
    </style>

    <style name="splashscreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="FirebaseAuthUi" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
       <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorTertiary">@color/textColorPrimary</item>
       <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:statusBarColor">@color/windowBackground</item>

    </style>


    <style name="LoginTitle" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">55sp</item>
    </style>


    <style name="Sub_Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="ConnectWith" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TabItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginButtons" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="DialogText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DialogEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_margin">5dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:textColorTertiary">@color/textColorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="dialogCornerRadius">30dp</item>

    </style>


    <style name="TimePickerDialog" parent="Theme.AppCompat.DayNight.Dialog">
       <item name="colorAccent">@color/colorAccent</item>


    </style>


</resources>
